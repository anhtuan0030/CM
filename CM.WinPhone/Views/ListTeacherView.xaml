    <views:MvxPhonePage.Resources>
        <DataTemplate x:Key="templateTeachers">
            <Grid Margin="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="{Binding ImagePath}" Height="75" Width="60" />
                <StackPanel Grid.Column="1" Margin="12">
                    <TextBlock FontSize="30" Text="{Binding Fullname}" />
                    <TextBlock FontSize="24" Text="{Binding Subject}" />
                </StackPanel>
            </Grid>

        </DataTemplate>
    </views:MvxPhonePage.Resources>
    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot"  >
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="/Assets/bg1.jpg" ></ImageBrush>

        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel Grid.Row="0" Margin="12,17,0,28">
            <TextBlock Text="Chose Teacher" TextAlignment="Left"   FontSize="30" Style="{StaticResource PhoneTextTitle2Style}" Foreground="#FF54EFDE" FontWeight="Bold"/>
        </StackPanel>


        <!--ContentPanel - place additional content here-->
        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,0,12,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ListBox x:Name="teacherListBox"
                     Grid.Row="1"
                     
                     ItemTemplate="{StaticResource templateTeachers}"
                     ItemsSource="{Binding ListData}" />
        </Grid>

    </Grid>

    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar IsVisible="True" IsMenuEnabled="False">
            <shell:ApplicationBarIconButton IconUri="/Assets/Command-Undo.png" Text="Back"/>
            <shell:ApplicationBarIconButton IconUri="/Assets/Business-Man-01.png" Text="My Info" />
            <shell:ApplicationBarIconButton IconUri="/Assets/Book.png" Text="My Course" />

        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>
</views:MvxPhonePage>